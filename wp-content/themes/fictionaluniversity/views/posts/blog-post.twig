<div class="post-item">
	<h3>
		<a href="{{post.link}}">{{post.title}}</a>
	</h3>
</div>

<div class="metabox">
	<p>Posted by
		<a href="{{post.author.link}}">{{post.author.name}}</a>
		on
		{{ post.date('"d M Y') }}
		in
		{{ fn('get_the_category_list', ', ') }}
	</p>
</div>

<div class="generic-content">
	{{post.preview.length(18).read_more(false)}}

	<p>
		<a class="btn btn--blue" href="{{post.link}}">Continue readling</a>
	</p>
</div>

