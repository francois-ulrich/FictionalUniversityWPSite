                        By <a href="{{post.author.link}}">{{post.author.name}}</a> in {{ fn('get_the_category_list', ', ') }} <span>&bull;</span> {{ post.post_date|date }}
                    </p> #}
                    {% include "/components/posts/post-infos.twig" %}

                    {{ post.content }}
                </section>
            </article>
        </div>
    </div>
{% endblock %}
